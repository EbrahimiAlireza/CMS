@model IEnumerable<DataLayer.Page>
<div class="news-slider border-radius margin-top-30">
    <div id="slider-one" class="owl-carousel">
    
        @foreach (var item in Model)
        {
               <!-- each item -->
            <div class="item">
                <img src="~/PageImages/@item.ImageName">
                <div class="left-side">
                    <h2> <a href="/News/@item.PageID/@item.Title">@item.Title</a> </h2>
                    <p>
                    @item.ShortDescription
                     </p>
                    <span> <i class="fa fa-calendar"></i> انتشار : @item.CreateDate.ToShamsi()</span>
                </div>
                <div class="clearfix"></div>
            </div>
        <!-- end each item -->
        }

    </div>
</div>
