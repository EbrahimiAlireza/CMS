@model DataLayer.Page

@{
    ViewBag.Title = Model.Title;
}
<ul class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">خانه </a></li>
    <li class="breadcrumb-item"><a href="/Archive">مقاله </a></li>
    <li class="breadcrumb-item"><a href="#">@Model.PageGroup.GroupTitle</a></li>
    <li class="breadcrumb-item active">@Model.Title </li>
</ul>
<section class="single-news border-radius">
    <header><h2> @Model.Title</h2> <span> <i class="fa fa-calendar"></i>  انتشار : @Model.CreateDate.ToShamsi()</span></header>
    <article>
        <p>
            @Model.ShortDescription
        </p>
        <div>
            <img src="~/PageImages/@Model.ImageName" class="thumbnail" style="max-width:100%; margin:20px auto;" />
        </div>
        <p>
            @Html.Raw(Model.Text)
            </p>
        </article>
    <div class="shadow box d-flex border-radius">
        <div>
            <h3>
                به اشتراک بگذارید
            </h3>
        </div>

        <ul class="d-flex">
            <li class="mx-3">
                <a href="https://telegram.me/share/url?url=https://learn.ebrahimialireza.ir/News/@Model.PageID/@Model.Title>">
                    <img src="~/Content/img/telegram.png" />
                </a>
            </li>
            <li class="mx-3">
                <a href="https://instagram.com/share/url?url=https://learn.ebrahimialireza.ir/News/@Model.PageID/@Model.Title>" >
                    <img src="~/Content/img/instagram.png" />
                </a>
            </li>
        </ul>
    </div>
    </section>

    <div class="keywords border-radius">
        @foreach (var item in Model.Tags.Split(','))
        {
            <a href="/Search?q=@item"> @item </a>
        }
    </div>

 
    <section class="comment-layer shadow">
        <header> <i class="fa fa-comments"></i><h5> دیدگاه کاربران </h5><span> @Model.PageComments.Count() دیدگاه </span> </header>
        <ul id="CommentList">

            @Html.Action("ShowComments")

        </ul>


        <h6> شما هم دیدگاه خود را ارسال کنید </h6>
        
        <form class="comment-form" method="post">
            <div>
                <input placeholder="نام و نام خانوادگی" type="text" id="txtName">
                <input placeholder="ایمیل خود را وارد نمایید " type="email" id="txtEmail">
            </div>
            <textarea placeholder="متن دیدگاه" id="txtComment"></textarea>
            <input value="ثبت دیدگاه ارزشمند شما " class="btn btn-success btn-block" type="button" onclick="AddComment()">
        </form>
    </section>


    <script>
        function AddComment() {
            $.ajax({
                url:"/News/AddComment/"+@Model.PageID,
                type:"post",
                data:{name : $("#txtName").val(),email : $("#txtEmail").val(),comment : $("#txtComment").val()}
            }).done(function(result){

                $("#CommentList").html(result);

                $("#txtName").val("");
                $("#txtEmail").val("");
                $("#txtComment").val("");
            });
        }
    </script>