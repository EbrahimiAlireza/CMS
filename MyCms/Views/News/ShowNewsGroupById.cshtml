@model IEnumerable<DataLayer.Page>

    <ul class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">خانه </a></li>
        <li class="breadcrumb-item"><a href="#">مقاله </a></li>
        <li class="breadcrumb-item active"> @ViewBag.Name </li>
    </ul>

    <!-- last news -->
@if (Model.Any())
{
    <section class="last-news-section border-radius">
        <header><i class="icons icon-doc-2"></i>  <h3> آرشیو مقالات @ViewBag.Name</h3> </header>
        <ul>

            @foreach (var item in Model)
            {
                <li>
                    <img class="border-radius" src="~/PageImages/@item.ImageName">
                    <h2> <a href="/News/@item.PageID/@item.Title"> @item.Title </a></h2>
                    <p class="text-14">
                        @item.ShortDescription
                    </p>
                    <span class="date-publish"><i class="fa fa-calendar"></i> انتشار : @item.CreateDate.ToShamsi() </span>
                    <a href="/News/@item.PageID/@item.Title" class="more-link"><i class="icons icon-more"></i></a>
                </li>
            }

        </ul>
    </section>
    <!-- End last news -->

    
}else{

    <div class="alert alert-info">
        <p>
            بزودی 
        </p>
    </div>
}